---
export interface Props {
  src: string;
  slug: string;
  title: string;
}

const { src, slug, title } = Astro.props;
---

<div class="project-thumbnail">
  <a href={`/projects/${slug}`}>
    <div class="thumbnail-container">
      <img src={`/projects/_thumbnails/${src}`} />
    </div>
  </a>
  <div class="project-title">
    <span>{title}</span>
  </div>
</div>
<style>
  a {
    margin: 0;
    padding: 0;
    width: inherit;
    height: inherit;
  }
  .project-thumbnail {
    display: flex;
    position: relative;
    flex-direction: column;
  }
  .project-title {
    opacity: 0.6;
    font-size: var(--size-smaller);
    color: var(--colour-soft);
    text-align: center;
    margin-top: 1em;
  }
  .thumbnail-container {
    filter: grayscale(1);
    transition: 0.7s filter ease-in;
    flex: 1 0 100%;
  }
  .thumbnail-container:hover {
    filter: grayscale(0);
  }
  .thumbnail-container:before {
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    content: "";
    background: radial-gradient(
      circle,
      rgba(239, 239, 239, 0) 20%,
      rgba(239, 239, 239, 1) 70%
    );
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 1;
  }
</style>
