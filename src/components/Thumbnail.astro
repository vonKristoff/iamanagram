---
export interface Props {
	src: string;
	slug: string;
	title: string;
	related: boolean;
}

const { src, slug, title, related = false } = Astro.props;
---

<div class={`project-thumbnail ${related ? 'related' : ''}`}>
	<a href={`/projects/${slug}`}>
		<div class="thumbnail-container">
			<img src={`/projects/_thumbnails/${src}`} />
		</div>
	</a>
	<div class="project-title">
		<span>{title}</span>
	</div>
</div>
<style>
	a {
		margin: 0;
		padding: 0;
		width: inherit;
		height: inherit;
		position: relative;
	}
	@media (max-width: var(--width-mobile)) {
		a {
			margin: 0.5em;
		}
	}
	.project-thumbnail {
		display: flex;
		flex-direction: column;
	}
	.project-thumbnail.related {
		flex-direction: column-reverse;
	}
	.project-title {
		/* opacity: 0.6; */
		font-size: 0.8em;
		/* color: var(--colour-hard-green); */
		text-align: center;
		margin-top: 1em;
		min-height: 2.5em;
		pointer-events: none;
		cursor: pointer;
		font-family: monospace;
	}
	.project-thumbnail.related .project-title {
		min-height: 4em;
	}
	.thumbnail-container {
		/* filter: grayscale(1); */
		opacity: 0.51;
		transition: 0.7s all ease-in;
	}
	.thumbnail-container:hover {
		/* filter: grayscale(0); */
		opacity: 0.91;
	}
	.thumbnail-container:before {
		position: absolute;
		top: 0;
		height: 100%;
		width: 100%;
		content: '';
		/* transition: 0.3s all; */
		/* background: radial-gradient(
      circle,
      rgba(239, 239, 239, 0) 20%,
      rgba(239, 239, 239, 1) 70%
    ); */
	}
	img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		aspect-ratio: 1/1;
	}
</style>
