---
export interface Props {
	date?: string;
	title?: string;
	subtitle?: string;
}
const { date, title, subtitle } = Astro.props;
---

<section>
	<div class="spacing nice-border">
		<div class="border"></div>
		<heading>
			<!-- <div class="spacer"></div> -->
			{!!title && <h3>{title}</h3>}
			{!!date && <p class="date">{date}</p>}
		</heading>
		{!!subtitle && <h4>{subtitle}</h4>}
		<slot />
	</div>
</section>

<style>
	heading {
		display: flex;
		flex-direction: row;
		color: #1a2e3b;
		gap: 1em;
		align-items: center;
	}
		position: relative;
	}
	.border {
		margin: 4em 0;
		height: 0.25em;
		background-position: center;
		background-color: var(--colour-soft-grey);
	}

	.spacer {
		flex: 1 4 150px;
	}
	h3 {
		flex: 1 2 800px;
		margin-bottom: .5em;
	}
	p.date {
		flex: 1 0 200px;
		text-align: right;
		color: var(--colour-soft);
		font-size: var(--size-smaller);
	}
	h4 {
		margin-top: 0;
		/* color: #403578; */
	}
	.spacing aside:not(:last-child) {
		background-color: var(--colour-crimson);
	}
</style>
