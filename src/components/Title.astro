---
export interface Props {
  date?: string;
  title?: string;
  subtitle?: string;
}
const { date, title, subtitle } = Astro.props;
---

<section>
  <div class="spacing nice-border">
    <heading>
      <!-- <div class="spacer"></div> -->
      {!!title && <h3>{title}</h3>}
      {!!date && <p class="date">{date}</p>}
    </heading>
    {!!subtitle && <h4>{subtitle}</h4>}
    <slot />
  </div>
</section>

<style>
  heading {
    display: flex;
    flex-direction: row;
    color: #1a2e3b;
    gap: 1em;
  }
  .spacing {
    margin: var(--spacing-level-4) 0;
    border-top: var(--spacing-level-3) dotted #e5e5e5;
    position: relative;
  }
  .nice-border {
    border-style: dotted;
    border-color: whitesmoke;
    border-image: url("/circle.svg") 34 21 round;
    -webkit-border-image: url("/circle.svg") 20% stretch;
    border-image-slice: 50% 30%;
    border-image-repeat: round;
    border-left: none;
    border-right: none;
    border-bottom: none;
  }

  .spacer {
    flex: 1 4 150px;
  }
  h3 {
    flex: 1 2 800px;
  }
  p.date {
    flex: 1 1.5 200px;
    text-align: right;
    color: var(--colour-soft);
    font-size: var(--size-smaller);
  }
  h4 {
    margin-top: 0;
    color: #403578;
  }
  .spacing aside:not(:last-child) {
    background-color: red;
  }
</style>
