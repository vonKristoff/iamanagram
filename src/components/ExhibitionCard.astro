---
// import Icon from "./Icon.astro";
import type { CollectionEntry } from 'astro:content';
export type Props = Pick<CollectionEntry<'exhibitions'>, 'data'>;

const { data } = Astro.props;

function removeYear(date?: string) {
	if (!date) return '';
	return date.split(' ').slice(0, -1).join(' ');
}
---

<article class="flex flex-col font-light max-w-3xl gap-6 w-[100%] px-8">
	<div class="flex flex-col justify-between gap-4">
		<div class="flex flex-col justify-start">
			<h3 class="text-lg sm:text-2xl font-bold shrink-1">
				<a class="border-b-2" href={`/projects/${data.url}`}>{data.title}</a>
				<!-- <span class="border-b-2"></span> -->
			</h3>
			<!-- <h4>{data.client}</h4> -->
		</div>
		<div class="flex flex-col-reverse md:flex-row justify-between gap-4 md:gap-0">
			{
				data.tickets && (
					<div class="flex self-end items-center justify-between flex-col md:flex-row text-sm">
						<div class="flex items-center gap-4 rounded-md">
							<a
								class="btn-secondary border-1 px-2 py-1 rounded-lg flex items-center gap-2"
								href={data.tickets}
							>
								{/* <Icon ctx="credit-card" /> */}
								<strong>Book tickets</strong>
							</a>
						</div>
					</div>
				)
			}
			<div class="flex flex-col sm:flex-col md:items-end items-start gap-0 sm:gap-2">
				<div class="flex md:justify-end md:flex-row pt-2 sm:pt-0 w-[100%] text-sm">
					<div class="flex gap-2 items-center">
						<!-- <Icon ctx="calendar" /> -->
						<span class="text-xs md:text-sm">{removeYear(data.from)} -</span>
					</div>
					<span class="text-xs md:text-sm">&nbsp;{data.to}</span>
				</div>
				<div class="text-xs
          md:text-sm
          text-right">
					{data.venue}
					<!-- {venue && venue.map((val) => <p>{val}</p>)} -->
				</div>
				<div class="text-xs
          md:text-sm
          text-right">
					{data.location}
				</div>
			</div>
		</div>
	</div>
	<!-- <div class="flex flex-col gap-2">
    {description}
    {description && description.map((val) => <p>{val}</p>)}
    {cite && <p class="italic text-right">{cite}</p>}
  </div> -->
	<!-- <a class="text-sm" href={`/${slug}`}
      ><strong>see here for more information</strong></a
    > -->
</article>
<style>
	.btn-secondary:hover {
		&:after {
			width: 0;
		}
	}
	article {
		border-bottom: 1px solid #aaa;
	}
	article:last-of-type {
		border: none;
	}
</style>
