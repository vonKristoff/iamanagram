---
import MainHeader from "./MainHeader.astro";
export interface Props {
  title: string;
  subtitle: string;
  meta1: string;
  meta2: string;
}
const { title, subtitle, meta1, meta2 = "" } = Astro.props as Props;
---

<MainHeader title={title}>
  <header>
    <h1>{title}</h1>
    {!!subtitle && <h2>{subtitle}</h2>}
    {
      !!meta1 && (
        <>
          <h4>{meta1}</h4>
          <h4>{meta2}</h4>
        </>
      )
    }
  </header>
  <article>
    <slot />
  </article>
</MainHeader>
<style>
  h1 {
    color: var(--colour-violet);
  }
  h2 {
    color: var(--colour-dark);
  }
  header {
    margin: auto;
    max-width: var(--width-section);
  }
  header h4:last-child {
    text-align: right;
    margin-bottom: 0;
  }
</style>
