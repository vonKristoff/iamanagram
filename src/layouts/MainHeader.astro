---
const { title, omit = null } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          {
            omit !== "films" && (
              <li>
                <a href="/films">Films</a>
              </li>
            )
          }
          {
            omit !== "soundworks" && (
              <li>
                <a href="/soundworks">Soundworks</a>
              </li>
            )
          }
          {
            omit !== "performances" && (
              <li>
                <a href="/performances">Performances</a>
              </li>
            )
          }
          {
            omit !== "other" && (
              <li>
                <a href="/other">Other</a>
              </li>
            )
          }
          <!-- <li class="email"><strong>aurasatz@onetel.com</strong></li> -->
        </ul>
      </nav>
      <a class="no-underline" href="/"><div id="title">AURA SATZ</div></a>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<style>
  html {
    font-family: system-ui, sans-serif;
    background-color: #efefef;
    max-width: 100vw;
    overflow-x: hidden;
  }
  body {
    margin: 0;
    padding: 0;
    /* margin: 0 var(--spacing-level-3); */
    /* max-width: var(--width-page); */
    overflow-x: hidden;
  }
  header {
    width: 100%;
    /* max-width: 100vw; */
    /* overflow-x: hidden; */
    display: flex;
    padding: var(--spacing-level-4) var(--spacing-level-3);
    align-items: center;
    justify-content: space-between;
  }
  nav ul {
    display: flex;
  }
  nav li {
    list-style: none;
    margin-left: 2em;
  }
  nav li:first-child {
    margin-left: 0;
  }
  nav li strong {
    color: var(--colour-violet);
  }
  @media (max-width: var(--width-mobile)) {
    .email {
      display: none;
    }
  }
  main {
    /* width: 100%; */
    margin: 0 auto;
    max-width: calc(var(--width-article) + var(--spacing-level-2));
    margin-bottom: var(--spacing-level-1);
  }
  #title {
    position: relative;
    font-size: 1.5em;
  }
  a.no-underline {
    text-decoration: none;
  }
  #title:before {
    position: absolute;
    content: "";
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgb(255 255 255 / 27%) 10%,
      rgb(248 68 255 / 57%) 30%,
      rgb(255 0 0 / 84%) 70%,
      rgb(239 239 239 / 52%) 60%
    );
    /* background-color: var(--colour-crimson); */
    width: 20em;
    height: 20em;
    filter: blur(2em);
    inset: -9em 0 0 -1em;
    z-index: 1;
  }
</style>

<style is:global>
  * {
    box-sizing: border-box;
  }
  :root {
    --colour-crimson: crimson;
    --colour-violet: darkslateblue;
    --colour-dark: #1a2e3b;
    --colour-soft: #666;
    --colour-soft-white: #ccc;
    --width-section: 70ch;
    --width-article: 1024px;
    --width-page: 1280px;
    --width-mobile: 520px;
    --spacing-level-1: 6em;
    --spacing-level-2: 3em;
    --spacing-level-3: 2em;
    --spacing-level-4: 1.5em;
    --size-smaller: 0.85em;
  }
  ul,
  li {
    margin: 0;
    padding: 0;
  }
  section:first-child {
    margin-top: var(--spacing-level-2);
  }
  section {
    max-width: var(--width-section);
    margin: auto;
    line-height: var(--spacing-level-4);
  }
  h4 {
    color: var(--colour-crimson);
  }
  p {
    color: var(--colour-dark);
  }
  .side-content h3:first-child {
    margin-top: 0;
  }
  .side-content h2:first-child {
    margin-top: 0;
  }
  .side-content h4:first-child {
    margin-top: 0;
  }
</style>
